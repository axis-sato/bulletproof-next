{
  "openapi": "3.0.2",
  "info": {
    "title": "Bulletproof Next",
    "version": "1.0",
    "summary": "Bulletproof Next API"
  },
  "servers": [
    {
      "url": "http://localhost:3001/api",
      "description": "dev"
    }
  ],
  "paths": {
    "/users": {
      "get": {
        "summary": "ユーザ一覧取得",
        "tags": ["user"],
        "responses": {
          "200": {
            "$ref": "#/components/responses/users"
          }
        },
        "operationId": "getUsers"
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "title": "User",
        "type": "object",
        "description": "",
        "examples": [
          {
            "id": 1,
            "firstName": "Paolo",
            "lastName": "Maldini",
            "email": "paolo@example.com",
            "role": "ADMIN",
            "createDate": "2021-01-01T00:00:00+09:00"
          }
        ],
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the given user.",
            "example": 1,
            "minimum": 1
          },
          "firstName": {
            "type": "string",
            "example": "Paolo"
          },
          "lastName": {
            "type": "string",
            "example": "Maldini"
          },
          "email": {
            "type": "string",
            "format": "email",
            "example": "paolo@example.com"
          },
          "role": {
            "type": "string",
            "enum": ["ADMIN", "USER"],
            "example": "ADMIN"
          },
          "createDate": {
            "type": "string",
            "format": "date-time",
            "description": "The date that the user was created.",
            "example": "2021-01-01T00:00:00+09:00"
          }
        },
        "required": [
          "id",
          "firstName",
          "lastName",
          "email",
          "role",
          "createDate"
        ]
      }
    },
    "responses": {
      "users": {
        "description": "Example response",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "users": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              }
            },
            "examples": {
              "example": {
                "value": {
                  "users": [
                    {
                      "id": 1,
                      "firstName": "Masahiko",
                      "lastName": "Sato",
                      "email": "sato@example.com",
                      "role": "ADMIN",
                      "createDate": "2021-01-01T00:00:00+09:00"
                    },
                    {
                      "id": 2,
                      "firstName": "Paolo",
                      "lastName": "Maldini",
                      "email": "paolo@example.com",
                      "role": "ADMIN",
                      "createDate": "2021-01-01T00:00:00+09:00"
                    },
                    {
                      "id": 3,
                      "firstName": "Ricardo",
                      "lastName": "Kaka",
                      "email": "ricky@example.com",
                      "role": "USER",
                      "createDate": "2021-01-01T00:00:00+09:00"
                    },
                    {
                      "id": 4,
                      "firstName": "Filippo",
                      "lastName": "Inzaghi",
                      "email": "pippo@example.com",
                      "role": "USER",
                      "createDate": "2021-01-01T00:00:00+09:00"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
